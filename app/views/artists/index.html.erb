<p id="notice"><%= notice %></p>

<div class="col-md-2">
   <%= link_to 'New Artist', new_artist_path, class: 'add-new-artist add' %>
</div>

<div id="artists-list">
   <% @artists.each do |artist| %>
      <div class="artist col-md-3">
         <%= artist.avatar.exists? ? image_tag(artist.avatar.url(:medium)) : '&empty;'.html_safe %>
         <p><%= artist.name %></p>
         <div class="edit-section">
            <%= link_to 'Show', artist %>
            <%= link_to 'Edit', edit_artist_path(artist) %>
            <%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %>
         </div>
      </div>
   <% end %>
</div>

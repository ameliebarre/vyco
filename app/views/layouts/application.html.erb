<!DOCTYPE html>
<html>
<head>
  <title>Vyco</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- FONTS -->
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

</head>
<body>

   <% if user_signed_in? %>
      <header id="main-header">
         <%= content_tag :span, "Vyco", :class => "logo" %>
         <p>Hello <%= current_user.email %> - <%= link_to('DÃ©connexion', destroy_user_session_path, :method => :delete) %>
      </header>
   <% else %>
      <div id="login-header">
         <%= content_tag :span, "Vyco", :class => "logo" %>
      </div>
   <% end %>

   <div class="container-fluid wrapper">
      <div class="row">
         <div id="sidebar" class="col-md-3 col-sm-3 col-xs-5">
            <div id="user-infos">
               <div class="gravatar"><%= image_tag gravatar_url(current_user) %></div>
               <span class="email-user-info"><%= current_user.email %></span>
            </div>
         </div>

         <div class="col-md-9 col-sm-9 col-xs-7">
            <%= yield %>
         </div>
      </div>
   </div>

</body>
</html>

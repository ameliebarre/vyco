<!DOCTYPE html>
<html>
<head>
  <title>Vyco</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- FONTS -->
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

</head>
<body>

   <% if user_signed_in? %>
      <header id="main-header" class="container-fluid">
         <div class="row">
            <div class="col-md-9"><%= content_tag :span, "Vyco", :class => "logo" %></div>
            <div id="user-informations" class="col-md-3">Hello <%= current_user.email %> <%= link_to('DÃ©connexion', destroy_user_session_path, :method => :delete, :class => "logout") %>
         </div>
      </header>
   <% else %>
      <div id="login-header">
         <%= content_tag :span, "Vyco", :class => "logo" %>
      </div>
   <% end %>

   <div class="container-fluid wrapper">
      <div class="row">
         <% if user_signed_in? %>
         <div id="sidebar" class="col-md-3 col-sm-3 col-xs-5">
            <div id="user-infos">
               <div class="gravatar"><%= image_tag gravatar_url(current_user) %></div>
            </div>
            <div id="sidebar-nav">
               <section id="music">
                  <h3>Musique</h3>
                  <p>Artistes</p>
                  <p>Albums</p>
               </section>
               <section id="playlists">
                  <h3>Playlists</h3>
                  <%= link_to 'Nouvelle playlist', new_playlist_path %>
               </section>
            </div><!-- #sidebar-nav -->
         </div>
         <% end %>

         <% if user_signed_in? %>
         <div class="col-md-9 col-sm-9 col-xs-7">
         <% else %>
            <div class="col-md-12">
         <% end %>
            <%= yield %>
         </div>
      </div>
   </div>

</body>
</html>

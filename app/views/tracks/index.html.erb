<h1>Listing Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th>Id album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
         <td>
            <audio controls="controls">
              Votre navigateur ne supporte pas l'élément <code>audio</code>.
              <source src="file:<%=track.track_file.path%>">
            </audio>
         </td>
            <!-- <%= track.track_file.exists? ? audio_tag(track.track_file) : '&empty;'.html_safe %></td> -->
         <td><%= track.name %></td>
        <td><%= track.path %></td>
        <td><%= track.id_album %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


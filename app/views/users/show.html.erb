<p id="notice"><%= notice %></p>

<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <p><%= @user.firstname %> <%= @user.name %></p>
      <p><%= @user.mail %></p>
      <p><%= @user.pseudo %></p>
    </section>
  </aside>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
